<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnInfoApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30"
           >
            <Label FontSize="Medium" Text="Enter your country"/>
            <Entry x:Name="countryName" Placeholder="Iraq"/>

            <Button x:Name="ButtonSearch" Text="Search" Clicked="ButtonSearch_Clicked"/>

            <VerticalStackLayout x:Name="ConLayout" Spacing="10">
            </VerticalStackLayout>
          
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
